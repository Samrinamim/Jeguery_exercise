<script type="text/javascript">
    $(document).ready(function(){

    var i=1;
    $('#button').click(function(){
        setInterval(function() {


            i++;
            if (i == 6) i = 1;
            var url = 'pic/' + i + '.jpeg';
            $('#frameimg').attr('src', url);


        },1000);

    });
    });

